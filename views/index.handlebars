{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
{{!-- Create a button in index.handlebars that will submit the user input into the database. --}}

<div id="header">
    <h1>EAT-A-BURGER!</h1>
    <img src="https://assets.epicurious.com/photos/57c5c6d9cf9e9ad43de2d96e/master/pass/the-ultimate-hamburger.jpg"
        width="250" alt="ULTIMATE BURGER">
</div>

<div class="row">
    <div class="col-md-6">
        <div class="display" id="displayBurger">
            <h3 style="text-align: center;">BURGERS ORDERED :</h3>
            <ul id="burgerItem">
                {{#each burgers}}
                {{burger_name}}
                <button class="devouredId" id={{this.id}}>devour it</button>
                {{/each}}

            </ul>
        </div>
    </div>

    {{!-- div for devoured --}}
    <div class="col-md-6">
        <div class="display" id="displayDevour">
            <h3 style="text-align: center;">BURGERS DEVOURED :</h3>

            <ul id="devourItem">
                {{#each burgers}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>

<div class="row" id="formRow">
    <div class="col-md-12">
        <div id="newBurgerForm" class="center">
            <h2>ENTER A BURGER BELOW.</h2>
            <form id="create-form">

                <div class="form-group">
                    <label for="ca">Which burger would you like to order?:</label>
                    <input type="text" id="burger_Input" name="name">
                </div>

                <button id="submitButton" type="submit">SUBMIT</button>
            </form>
        </div>
    </div>
</div>